        <TextBlock x:Name="textBlock_mensaje" HorizontalAlignment="Left" Margin="66,332,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="50" Width="356" FontSize="14" FontWeight="Normal"/>
